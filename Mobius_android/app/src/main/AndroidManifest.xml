<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="attendance.mobius.mobius_android">


    <application
        android:name=".GlobalStorage"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.Dark"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".LectureListActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".ProfessorCheckActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".StudentCheckActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".ProfessorCreateLectureActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".StudentJoinLectureActivity"
            android:theme="@style/AppTheme.Dark"></activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

</manifest>